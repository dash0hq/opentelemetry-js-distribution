{
  "name": "@dash0/opentelemetry",
  "version": "0.0.0-managed-by-semantic-release",
  "description": "Dash0 OpenTelemetry Wrapper for Node.js",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc --build --force",
    "verify": "npm run lint && npm test",
    "lint": "npm run eslint && npm run prettier-check",
    "eslint": "eslint eslint.config.mjs src test",
    "prepack": "rimraf dash0-opentelemetry-*.tgz && npm run build",
    "prettier": "prettier --write eslint.config.mjs .mocharc.js 'src/**/*.[jt]s' 'test/**/*.[jt]s' --parser typescript",
    "prettier-check": "prettier --check eslint.config.mjs 'src/**/*.[jt]s' 'test/**/*.[jt]s' --parser typescript",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha --config test/.mocharc.unit.js --require ts-node/register",
    "test:integration": "npm run test:integration:default && npm run test:integration:minimum-version-check",
    "test:integration:default": "mocha --config test/.mocharc.integration.js --require ts-node/register --require test/integration/rootHooks.ts",
    "test:integration:minimum-version-check": "mocha --config test/.mocharc.integration.minimum-version-check.js --require ts-node/register --require test/integration/rootHooks.ts",
    "test:coverage": "nyc npm run test",
    "start-collector": "node --require ts-node/register test/collector/index.ts"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.ts",
    "dist/**/*.ts.map",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dash0hq/opentelemetry-js-distribution.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Bastian Krol",
    "email": "bastian.krol@dash0.com"
  },
  "contributors": [],
  "keywords": [
    "OpenTelemetry",
    "OTel",
    "Dash0",
    "observability",
    "APM",
    "monitoring",
    "performance",
    "tracing"
  ],
  "bugs": {
    "url": "https://github.com/dash0hq/opentelemetry-js-distribution/issues"
  },
  "homepage": "https://github.com/dash0hq/opentelemetry-js-distribution#readme",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.60.0",
    "@opentelemetry/auto-instrumentations-node-1.x": "npm:@opentelemetry/auto-instrumentations-node@0.56.1",
    "@opentelemetry/core": "^2.0.1",
    "@opentelemetry/core-1.x": "npm:@opentelemetry/core@1.30.1",
    "@opentelemetry/exporter-logs-otlp-proto": "^0.202.0",
    "@opentelemetry/exporter-logs-otlp-proto-1.x": "npm:@opentelemetry/exporter-logs-otlp-proto@0.57.2",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.202.0",
    "@opentelemetry/exporter-metrics-otlp-proto-1.x": "npm:@opentelemetry/exporter-metrics-otlp-proto@0.57.2",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.202.0",
    "@opentelemetry/exporter-trace-otlp-proto-1.x": "npm:@opentelemetry/exporter-trace-otlp-proto@0.57.2",
    "@opentelemetry/instrumentation-kafkajs": "^0.11.0",
    "@opentelemetry/resource-detector-container": "^0.7.1",
    "@opentelemetry/resource-detector-container-1.x": "npm:@opentelemetry/resource-detector-container@0.6.1",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/resources-1.x": "npm:@opentelemetry/resources@1.30.1",
    "@opentelemetry/sdk-logs": "^0.202.0",
    "@opentelemetry/sdk-logs-1.x": "npm:@opentelemetry/sdk-logs@0.57.2",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-metrics-1.x": "npm:@opentelemetry/sdk-metrics@1.30.1",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/sdk-node-1.x": "npm:@opentelemetry/sdk-node@0.57.2",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/sdk-trace-base-1.x": "npm:@opentelemetry/sdk-trace-base@1.30.1",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/sdk-trace-node-1.x": "npm:@opentelemetry/sdk-trace-node@1.30.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@grpc/grpc-js": "^1.13.4",
    "@types/chai": "^5.2.2",
    "@types/is-ci": "^3.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.0",
    "@types/semver": "^7.7.0",
    "@types/sinon": "^17.0.4",
    "chai": "^4.4.1",
    "eslint": "^9.27.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-mocha": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "is-ci": "^4.1.0",
    "mocha": "^11.5.0",
    "node-fetch": "^2.7.0",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "protobufjs": "^7.4.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.5",
    "semver": "^7.7.2",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "ts-proto": "^2.7.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
